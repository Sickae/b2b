@using B2B.Web.Controllers
@using B2B.Logic.Identity
@inject SignInManager SignInManager

<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                <i class="fas fa-bars"></i>
            </a>
        </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a asp-action="@nameof(AccountController.Logout)" asp-controller="Account" class="nav-link">Logout</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a asp-action="@nameof(AccountController.Register)" asp-controller="Account" class="nav-link">Register</a>
            </li>
            <li class="nav-item">
                <a asp-action="@nameof(AccountController.Login)" asp-controller="Account" class="nav-link">Login</a>
            </li>
        }
    </ul>
</nav>
