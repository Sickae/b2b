@using B2B.Web.Controllers
@model B2B.Web.Models.LoginViewModel

<div class="container">
    <form asp-action="@nameof(AccountController.Login)" asp-controller="Account">
        <div class="field">
            <label asp-for="UserName" class="label"></label>
            <div class="control has-icons-left">
                <input asp-for="UserName" class="input" placeholder="Username"/>
                <span class="icon is-small is-left">
                    <i class="fas fa-user"></i>
                </span>
            </div>
        </div>
        <div class="field">
            <label asp-for="Password" class="label"></label>
            <div class="control has-icons-left">
                <input asp-for="Password" class="input" type="password" placeholder="Password"/>
                <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </div>
        </div>
        <input type="hidden" asp-for="ReturnUrl"/>
        <button type="submit" class="button is-success">Login</button>
    </form>
</div>
